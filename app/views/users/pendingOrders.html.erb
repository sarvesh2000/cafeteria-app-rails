<%= render 'navigation' %>
<h1>Pending Orders</h1>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Item Name</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @pendingOrders.each do |order|%>
            <tr>
                <td><%= order.id%></td>
                <% order.items.each do |item| %>
                    <td><%= item.item_name %></td>
                    <td><%= order.quantity * item.price %></td>
                <% end %>
                <td><%= link_to "Mark as Completed", complete_order_path(order.id), method: :post %></td>
            </tr>
        <% end %>
    </tbody>
</table>